<span class="err">                   </span><span class="kt">int</span> <span class="n">k</span><span class="o">)</span> <span class="o">{</span>

<span class="err">             </span><span class="kt">int</span> <span class="n">mLength</span> <span class="o">=</span> <span class="n">mEnd</span> <span class="o">-</span> <span class="n">mStart</span> <span class="o">+</span> <span class="mi">1</span><span class="o">;</span>

<span class="err">             </span><span class="kt">int</span> <span class="n">nLength</span> <span class="o">=</span> <span class="n">nEnd</span> <span class="o">-</span> <span class="n">nStart</span> <span class="o">+</span> <span class="mi">1</span><span class="o">;</span>

<span class="err">             </span><span class="c1">//确保 nums1 是数据较少的那个数组</span>

<span class="err">             </span><span class="k">if</span> <span class="o">(</span><span class="n">mLength</span> <span class="o">&gt;</span> <span class="n">nLength</span><span class="o">)</span> <span class="o">{</span>

<span class="err">                   </span><span class="k">return</span> <span class="n">findKthSmallestNumber</span><span class="o">(</span><span class="n">nums2</span><span class="o">,</span> <span class="n">nStart</span><span class="o">,</span> <span class="n">nEnd</span><span class="o">,</span> <span class="n">nums1</span><span class="o">,</span> 
